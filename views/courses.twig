{% extends "layout.twig" %}
{% block body %}

          <div class="all-title-box">
	<div class="container text-center">
		<h1>Courses<span class="m_1"></span></h1>
		
	</div>
</div>

	<div id="overviews" class="section wb">
		<div class="container">
			<div class="row">
				<div class="col-lg-9 blog-post-single">
					<div class="row">
					{% if user.type == 1 %}
						<button type="button" class="btn btn-primary w-50 mb-4" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@getbootstrap">Kurs Ekle</button>
					{% endif %}
						<form action="/courses/create" method="post" enctype="multipart/form-data">
							<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
								<div class="modal-dialog">
									<div class="modal-content">
										<div class="modal-header">
											<h1 class="modal-title fs-5" id="exampleModalLabel">Yeni Kurs</h1>
											<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
										</div>
										<div class="modal-body">
											<form>
												<div class="mb-3">
													<label for="recipient-name" class="col-form-label">Kurs Adı:
													</label>
													<input type="text" class="form-control" id="course-name" name="name">
												</div>
												<div class="mb-3">
													<label for="message-text" class="col-form-label">Kurs Açıklaması:</label>
													<textarea class="form-control" id="course-desc" name="description"></textarea>
												</div>
												<div class="mb-3">
													<label for="message-text" class="col-form-label">Kurs Resmi:</label>
													<input type="file" name="image" id="image">
												</div>
											</form>
										</div>
										<div class="modal-footer">
											<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
											<button type="submit" class="btn btn-primary">Kaydet</button>
										</div>
									</div>
								</div>
							</div>
						</form>
						{% if courses.length > 0 %}
							{% for c in courses %}
								<div class="col-lg-6 col-md-6 col-12">
									<div class="course-item mb-5">
										<div class="image-blog">
											<img src="  {{ c.image ?? '/images/blog_2.jpg'}}" alt="" class="img-fluid">
										</div>
										<div class="course-br">
											<div class="course-title">
												<h2>
													<a href="course/{{ c._id }}" title="">{{ c.name }}</a>
												</h2>
											</div>
											<div class="blog-desc">
												<p>{{ c.description }}</p>
											</div>
										</div>
										<div class="course-meta-bot">
											<ul>
												<li>
													<i class="fa fa-user" aria-hidden="true"></i>
													{{ c.owner }}</li>
											</ul>
										</div>
									</div>
								</div>
								<!-- end col -->
							{% endfor %}
						{% else %}
							<p>Kayıtlı Kurs Yok.</p>


						{% endif %}
					</div>
					<!-- end row -->

				</div>
				<!-- end col -->
				<div class="col-lg-3 col-12 right-single">
					<div class="widget-search">
						<div class="site-search-area">
							<form method="get" id="site-searchform" action="#">
								<div>
									<input class="input-text form-control" name="search-k" id="search-k" placeholder="Search keywords..." type="text">
									<input id="searchsubmit" value="Search" type="submit">
								</div>
							</form>
						</div>
					</div>
					<div class="widget-categories">
						<h3 class="widget-title">Categories</h3>
						<ul>
							<li><a href="#">Political Science</a></li>
							<li><a href="#">Business Leaders Guide</a></li>
							<li><a href="#">Become a Product Manage</a></li>
							<li><a href="#">Language Education</a></li>
							<li><a href="#">Micro Biology</a></li>
							<li><a href="#">Social Media Management</a></li>
						</ul>
					</div>
				</div>
			</div>
			<!-- end row -->
		</div>
		<!-- end container -->
	</div>
	<!-- end section -->


{% endblock %}
